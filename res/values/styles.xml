<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
    
    <style name="SectionHeader">
        <item name="android:gravity">left</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#777</item>        
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        
    </style>

    <style name="BarStyle">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="SubHeader">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14dip</item>
        <item name="android:paddingTop">0dp</item>
         <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Barack">
        <item name="android:textColor">#0099CC</item>
         <item name="android:textSize">22dip</item>
         <item name="android:textStyle">normal</item>
    </style>
    
    <style name="Mitt">
        <item name="android:textColor">#CC0000</item>
         <item name="android:textSize">22dip</item>
         <item name="android:textStyle">normal</item>
    </style>
    
     <style name="Barack.Small">
         <item name="android:textSize">12dip</item>
         <item name="android:textStyle">normal</item>
    </style>
    
    <style name="Mitt.Small">
         <item name="android:textSize">12dip</item>
         <item name="android:textStyle">normal</item>
    </style>

</resources>